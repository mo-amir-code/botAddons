{
  "name": "chat-gpt-manager",
  "displayName": "Chat gpt manager",
  "version": "0.0.1",
  "description": "ChatGPT Manager is a chrome extension that helps user to manage their AI conversations.",
  "author": "Mo Amir",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "clsx": "^2.1.1",
    "lucide-react": "^0.460.0",
    "plasmo": "0.89.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.53.2",
    "react-icons": "^5.3.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.15",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "tabs",
      "storage",
      "scripting",
      "activeTab"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/**/*"
        ],
        "matches": [
          "https://chatgpt.com/*"
        ]
      }
    ]
  }
}
